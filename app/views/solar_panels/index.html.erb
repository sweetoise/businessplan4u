<section class="content-header">
	<h1> Solar Panels <small>Solar Panels table</small></h1>
	<ol class="breadcrumb">
		<li>
			<a><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">
			<a>Solar Panel</a>
		</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Solar Panel Data With Full Features</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Title</th>
								<th>Description</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</thead>
						<tbody>
							<% @solar_panels.each do |solar_panel| %>
							<tr>
								<td><%= solar_panel.title %></td>
								<td><%= truncate solar_panel.description, length: 75 %></td>
								<td><%= link_to 'Show', solar_panel %></td>
								<td><%= link_to 'Edit', edit_solar_panel_path(solar_panel) %></td>
								<td><%= link_to 'Destroy', solar_panel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr>
							<% end %>
						</tbody>
						<tfoot>
							<tr>
								<th>Title</th>
								<th>Description</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</tfoot>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

	<!-- Default box -->
	<div class="box">
		<div class="box-footer">
			<!-- Block buttons -->
			<div class="box-header">
				<h3 class="box-title">New Solar Panel Detail</h3>
			</div>
			<div class="box-body">
				<div class="add-inst">
					<%= link_to '+  ADD DETAILS', new_solar_panel_path, :class => 'btn btn-primary btn-block' %>
				</div>
			</div>
		</div><!-- /.box-footer-->
	</div><!-- /.box -->
</section>

