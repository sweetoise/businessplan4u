<%= simple_form_for((@our_advantage), html: { class: "form-horizontal"}) do |f| %>

<% if @our_advantage.errors.any? %>
<div class="box-body">
	<div class="callout callout-warning">
		<h4><i class="icon fa fa-warning"></i> Error Alert!</h4>
	</div>
</div><!-- /.box-body -->
<% end %>

<% if @our_advantage.errors.any?  %>
<ul>
	<% @our_advantage.errors.full_messages.each do |msg| %>
	<li>
		<%= msg %>
	</li>
	<% end %>
</ul>
<% end %>

<div class="modal-body">
	<div class="box-body">
		<!-- Horizontal Form -->
		<!-- form start -->
		<div class="box-body">
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-4 control-label">Title</label>
				<div class="col-sm-7">
					<%= f.input :title, :label => false, :placeholder => "Enter Title ", input_html: { class: 'form-control form-control-input', id: 'inputEmail3' } %>
				</div>
			</div>
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-4 control-label">Description</label>
				<div class="col-sm-7">
					<%= f.input :description, :label => false, :placeholder => "Type Description ", input_html: { class: 'form-control', id: 'inputEmail3' } %>
				</div>
			</div>
		</div>
	</div><!-- /.box-body -->
</div>
<div class="modal-footer">
	<div class="form-actions">
		<%= link_to 'Back', our_advantages_path, class: 'btn btn-default pull-left' %>
	</div>
	<div class="form-actions">
		<%= f.button :submit, class: 'btn btn-primary' %>
	</div>
</div>
</div><!-- /.modal-content -->
<% end %>