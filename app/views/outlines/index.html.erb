<section class="content-header">
	<h1> Outlines <small>Outlines table</small></h1>
	<ol class="breadcrumb">
		<li>
			<a><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">
			<a>Outline</a>
		</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Outline Data With Full Features</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Question</th>
								<th>Entrepreneurship Prog.</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</thead>
						<tbody>
							<% @outlines.each do |outline| %>
							<tr>
								<td><%= outline.question %></td>
								<% if outline.entrepreneur_program %>
								<td><%= outline.entrepreneur_program.topic %></td>
								<% else %>
								<td><span class="label label-danger">Not Available</span></td>
								<% end %>
								<td><%= link_to 'Show', outline %></td>
								<td><%= link_to 'Edit', edit_outline_path(outline) %></td>
								<td><%= link_to 'Destroy', outline, method: :delete, data: { confirm: 'Are you sure?' } %></td>

							</tr>
							<% end %>
						</tbody>
						<tfoot>
							<tr>
								<th>Question</th>
								<th>Entrepreneurship Prog.</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</tfoot>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

	<!-- Default box -->
	<div class="box">
		<div class="box-footer">
			<!-- Block buttons -->
			<div class="box-header">
				<h3 class="box-title">New Outline</h3>
			</div>
			<div class="box-body">
				<div class="add-inst">
					<%= link_to '+  ADD Outline', new_outline_path, :class => 'btn btn-primary btn-block' %>
				</div>
			</div>
		</div><!-- /.box-footer-->
	</div><!-- /.box -->
</section>

