<section class="content-header">
	<h1> Sections <small>Sections table</small></h1>
	<ol class="breadcrumb">
		<li>
			<a><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">
			<a>Section</a>
		</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Section Data With Full Features</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Section</th>
								<th>Business Plan</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</thead>
						<tbody>
							<% @sections.order('id ASC').each do |section| %>
							<tr>
								<td><%= section.name %></td>
								<% if section.sample_business_plan %>
								<td><%= section.sample_business_plan.title %></td>
								<% else %>
								<td><span class="label label-danger">Not Available</span></td>
								<% end %>
								<td><%= link_to 'Show', section %></td>
								<td><%= link_to 'Edit', edit_section_path(section) %></td>
								<td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>

							</tr>
							<% end %>
						</tbody>
						<tfoot>
							<tr>
								<th>Section</th>
								<th>Business Plan</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</tfoot>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

	<!-- Default box -->
	<div class="box">
		<div class="box-footer">
			<!-- Block buttons -->
			<div class="box-header">
				<h3 class="box-title">New Section</h3>
			</div>
			<div class="box-body">
				<div class="add-inst">
					<%= link_to '+  ADD Section', new_section_path, :class => 'btn btn-primary btn-block' %>
				</div>
			</div>
		</div><!-- /.box-footer-->
	</div><!-- /.box -->
</section>

