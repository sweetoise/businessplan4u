<section class="content-header">
	<h1> Topics <small>Topics table</small></h1>
	<ol class="breadcrumb">
		<li>
			<a><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">
			<a>Topic</a>
		</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Topic Data With Full Features</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Number Tag</th>
								<th>Topic</th>
								<th>Section</th>
								<th>Business Plan</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</thead>
						<tbody>
							<% @topics.each do |topic| %>
							<% if topic.sample_business_plan.checked? %>
							<% else %>
							<tr>
								<td><%= number_with_precision(topic.number, precision: 2) %></td>
								<td><%= topic.title %></td>
								<% if topic.section %>
								<td><%= topic.section.name %></td>
								<% else %>
								<td><span class="label label-danger">Not Available</span></td>
								<% end %>
								<% if topic.sample_business_plan %>
								<td><%= topic.sample_business_plan.title %></td>
								<% else %>
								<td><span class="label label-danger">Not Available</span></td>
								<% end %>
								<td><%= link_to 'Show', topic %></td>
								<td><%= link_to 'Edit', edit_topic_path(topic) %></td>
								<td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr>
							<% end %>
							<% end %>
						</tbody>
						<tfoot>
							<tr>
								<th>Number Tag</th>
								<th>Topic</th>
								<th>Section</th>
								<th>Business Plan</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</tfoot>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

	<!-- Default box -->
	<div class="box">
		<div class="box-footer">
			<!-- Block buttons -->
			<div class="box-header">
				<h3 class="box-title">New Topic</h3>
			</div>
			<div class="box-body">
				<div class="add-inst">
					<%= link_to '+  ADD TOPICS', new_topic_path, :class => 'btn btn-primary btn-block' %>
				</div>
			</div>
		</div><!-- /.box-footer-->
	</div><!-- /.box -->
</section>

