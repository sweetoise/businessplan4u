<section class="content-header">
	<h1> Business & Finance Details <small>Business & Finance Details table</small></h1>
	<ol class="breadcrumb">
		<li>
			<a><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">
			<a>Business & Finance Detail</a>
		</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Business & Finance Detail Data With Full Features</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Title</th>
								<th>Description</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</thead>
						<tbody>
							<% @business_managements.each do |business_management| %>
							<tr>
								<td><%= business_management.title %></td>
								<td><%= truncate business_management.description, length: 75 %></td>
								<td><%= link_to 'Show', business_management %></td>
								<td><%= link_to 'Edit', edit_business_management_path(business_management) %></td>
								<td><%= link_to 'Destroy', business_management, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr>
							<% end %>
						</tbody>
						<tfoot>
							<tr>
								<th>Title</th>
								<th>Description</th>
								<th>Show content</th>
								<th>Edit content</th>
								<th>Delete content</th>
							</tr>
						</tfoot>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

	<!-- Default box -->
	<div class="box">
		<div class="box-footer">
			<!-- Block buttons -->
			<div class="box-header">
				<h3 class="box-title">New Business & Finance Detail Detail</h3>
			</div>
			<div class="box-body">
				<div class="add-inst">
					<%= link_to '+  ADD DETAILS', new_business_management_path, :class => 'btn btn-primary btn-block' %>
				</div>
			</div>
		</div><!-- /.box-footer-->
	</div><!-- /.box -->
</section>

